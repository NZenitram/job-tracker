Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>
<br>

<%= link_to "Edit", edit_company_job_path %>
<%= link_to "Delete", company_job_path, method: :delete %>
<h3>Comments</h3>
<%= form_for @comment do |f| %>
  <%= f.label :comment %>
  <%= f.text_field :content %>
  <%= hidden_field(:job, :id) %>

  <%= f.submit %>
<% end %>

<ol><% @job.comments.reverse_order.each do |comment| %>
  <li><%= comment.content %></li>
  <p>Posted <%= distance_of_time_in_words(comment.job.created_at, comment.created_at) %> later</p>
<% end %></ol>
